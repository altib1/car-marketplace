{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}
        
{% block body %}
            <div class="w-full">
                    <!-- menu -->
                    {% include 'menu/index.html.twig' %}
            </div>
    
            <div class="flex-1 p-4 mt-20 overflow-y-auto scroll-hidden ">

                    <!-- Hero Section -->
                    <section class=" py-16 rounded-xl">
                        <div class="container mx-auto px-4">
                            <div class="flex flex-col md:flex-row items-center justify-between gap-12">
                                <!-- Search Form -->
                                <div class="w-full md:w-1/2 space-y-6">
                                    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 leading-tight">
                                        Trouvez la voiture <span class="text-indigo-600">de vos rêves</span>
                                    </h1>
                                    <p class="text-gray-600 text-lg mb-8">
                                        Explorez notre sélection exclusive de véhicules et trouvez celui qui vous correspond.
                                    </p>
                                    {% include 'components/_search_form_home_page.html.twig' with {
                                        'brands': brands,
                                        'models': models,
                                        'motorizationTypes': motorizationTypes,
                                        'criteria': criteria
                                    } %}
                                </div>

                                <!-- Car Image with Animation -->
                                <div class="w-full md:w-1/2 transform hover:scale-105 transition-transform duration-300">
                                    <img src="{{ asset('website/homepage/11452747.png') }}" 
                                         alt="Car" 
                                         class="w-full h-auto object-cover rounded-2xl shadow-2xl"
                                         loading="lazy">
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Customer Reviews Section -->
                    <section class="py-12">
                        <div class="container mx-auto px-4">
                            <h2 class="text-3xl font-bold mb-8 text-gray-800">Avis de nos clients satisfaits</h2>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                                <div class="bg-white p-6 rounded-xl shadow-lg">
                                    <div class="flex items-center mb-4">
                                        <div class="text-yellow-400">★★★★★</div>
                                    </div>
                                    <p class="text-gray-700 mb-4">"Service exceptionnel, j'ai trouvé ma voiture idéale en quelques clics!"</p>
                                    <div class="flex items-center">
                                        <span class="ml-3 font-medium">Marie L.</span>
                                    </div>
                                </div>
                                <div class="bg-white p-6 rounded-xl shadow-lg">
                                    <div class="flex items-center mb-4">
                                        <div class="text-yellow-400">★★★★★</div>
                                    </div>
                                    <p class="text-gray-700 mb-4">"Comparaison facile et prix transparents. Je recommande!"</p>
                                    <div class="flex items-center">
                                        <span class="ml-3 font-medium">Pierre D.</span>
                                    </div>
                                </div>
                                <div class="bg-white p-6 rounded-xl shadow-lg">
                                    <div class="flex items-center mb-4">
                                        <div class="text-yellow-400">★★★★★</div>
                                    </div>
                                    <p class="text-gray-700 mb-4">"Une expérience d'achat automobile moderne et agréable."</p>
                                    <div class="flex items-center">
                                        <span class="ml-3 font-medium">Sophie M.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    
                    <!-- Ideal Vehicles -->
                    <section class="py-16">
                        <div class="container mx-auto px-4">
                            <h2 class="text-3xl font-bold mb-8 text-gray-800">Trouvez votre occasion idéale</h2>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                                <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/categories/petit-prix.jpg') }}" alt="Petit Prix" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Petits prix</h3>
                                    </div>
                                </div>
                                <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/categories/electrique.jpg') }}" alt="Électriques" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Électriques</h3>
                                    </div>
                                </div>
                                <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/categories/hybride.jpg') }}" alt="Hybrides" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Hybrides</h3>
                                    </div>
                                </div>
                                <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/categories/familiale.jpg') }}" alt="Familiales" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Familiales</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    
                    <!-- Popular Brands -->
                    <section class="bg-gradient-to-r from-gray-50 to-white py-16">
                        <div class="container mx-auto px-4">
                            <h2 class="text-3xl font-bold mb-8 text-gray-800">Les marques les plus populaires</h2>
                            <div class="flex flex-wrap justify-center gap-12">
                                <img src="{{ asset('website/brands/audi-logo.jpg') }}" alt="Audi" class="w-20 h-20 object-contain hover:transform hover:scale-110 transition-transform duration-300">
                                <img src="{{ asset('website/brands/bmw-logo.jpg') }}" alt="BMW" class="w-20 h-20 object-contain hover:transform hover:scale-110 transition-transform duration-300">
                                <img src="{{ asset('website/brands/mercedes-logo.jpg') }}" alt="Mercedes" class="w-20 h-20 object-contain hover:transform hover:scale-110 transition-transform duration-300">
                            </div>
                        </div>
                    </section>
                    
                    <!-- Price Indicator -->
                    <section class="py-16">
                        <div class="container mx-auto px-4">
                            <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-xl p-8 text-white">
                                <h2 class="text-3xl font-bold mb-4">Indicateur prix</h2>
                                <p class="text-lg opacity-90">Grâce à notre expertise, nous vous indiquons les meilleurs prix pour vos recherches.</p>
                            </div>
                        </div>
                    </section>
            </div>
{% endblock %}
