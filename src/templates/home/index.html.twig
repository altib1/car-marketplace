{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.title'|trans }}{% endblock %}
        
{% block body %}
    <div class="w-full">
        <!-- menu -->
        {% include 'menu/index.html.twig' %}
    </div>

    <div class="flex-1 p-4 mt-20 overflow-y-auto scroll-hidden ">

        <!-- Hero Section -->
        <section class="py-16 rounded-xl">
            <div class="container mx-auto px-4">
                <div class="flex flex-col md:flex-row items-center justify-between gap-12">
                    <!-- Search Form -->
                    <div class="w-full md:w-1/2 space-y-6">
                        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 leading-tight">
                            {{ 'homepage.hero.title'|trans }} <span class="text-indigo-600">{{ 'homepage.hero.subtitle'|trans }}</span>
                        </h1>
                        <p class="text-gray-600 text-lg mb-8">
                            {{ 'homepage.hero.description'|trans }}
                        </p>
                        {% include 'components/_search_form_home_page.html.twig' with {
                            'brands': brands,
                            'models': models,
                            'motorizationTypes': motorizationTypes,
                            'criteria': criteria
                        } %}
                    </div>

                    <!-- Snowy Toyota Scene -->
                    <div class="w-full md:w-1/2 relative">
                        <!-- Snow effect overlays -->
                        <div class="absolute -top-10 -right-10 w-40 h-40 bg-gradient-to-br from-blue-50 to-transparent rounded-full filter blur-2xl opacity-70"></div>
                        <div class="absolute -bottom-8 -left-8 w-48 h-48 bg-gradient-to-tr from-blue-100 to-transparent rounded-full filter blur-2xl opacity-70"></div>
                        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-white/20 to-transparent pointer-events-none"></div>
                        
                        <!-- Main image with enhanced effects -->
                        <div class="relative group">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent rounded-xl transition-opacity duration-300 group-hover:opacity-0"></div>
                            <img 
                                src="{{ asset('website/homepage/car-homepage-hero.jpg') }}" 
                                alt="Toyota in Snow" 
                                class="w-full h-[400px] object-cover rounded-xl shadow-lg transform transition-all duration-500 "
                            >
                            <!-- Snowflake overlay -->
                            <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAiIGhlaWdodD0iMTAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGNpcmNsZSBjeD0iNSIgY3k9IjUiIHI9IjEiIGZpbGw9IndoaXRlIiBmaWxsLW9wYWNpdHk9IjAuMyIvPjwvc3ZnPg==')] opacity-50"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Customer Reviews Section -->
        <section class="py-12">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold mb-8 text-gray-800">{{ 'homepage.reviews.title'|trans }}</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="bg-white p-6 rounded-xl shadow-lg">
                        <div class="flex items-center mb-4">
                            <div class="text-yellow-400">★★★★★</div>
                        </div>
                        <p class="text-gray-700 mb-4">{{ 'homepage.reviews.review1'|trans }}</p>
                        <div class="flex items-center">
                            <span class="ml-3 font-medium">{{ 'homepage.reviews.reviewer1'|trans }}</span>
                        </div>
                    </div>
                    <div class="bg-white p-6 rounded-xl shadow-lg">
                        <div class="flex items-center mb-4">
                            <div class="text-yellow-400">★★★★★</div>
                        </div>
                        <p class="text-gray-700 mb-4">{{ 'homepage.reviews.review2'|trans }}</p>
                        <div class="flex items-center">
                            <span class="ml-3 font-medium">{{ 'homepage.reviews.reviewer2'|trans }}</span>
                        </div>
                    </div>
                    <div class="bg-white p-6 rounded-xl shadow-lg">
                        <div class="flex items-center mb-4">
                            <div class="text-yellow-400">★★★★★</div>
                        </div>
                        <p class="text-gray-700 mb-4">{{ 'homepage.reviews.review3'|trans }}</p>
                        <div class="flex items-center">
                            <span class="ml-3 font-medium">{{ 'homepage.reviews.reviewer3'|trans }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Ideal Vehicles -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold mb-8 text-gray-800">{{ 'homepage.ideal_vehicles.title'|trans }}</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    <a href="{{ path('app_cars', {'price_max': '10000'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/petit-prix.jpg') }}" alt="{{ 'homepage.ideal_vehicles.low_price'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.low_price'|trans }}</h3>
                        </div>
                    </a>
                    <a href="{{ path('app_cars', {'fuel_type': 'electric'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/electrique.jpg') }}" alt="{{ 'homepage.ideal_vehicles.electric'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.electric'|trans }}</h3>
                        </div>
                    </a>
                    <a href="{{ path('app_cars', {'fuel_type': 'hybrid'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/hybride.jpg') }}" alt="{{ 'homepage.ideal_vehicles.hybrid'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.hybrid'|trans }}</h3>
                        </div>
                    </a>
                    <a href="{{ path('app_cars', {'fuel_type': 'diesel'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/diesel.jpg') }}" alt="{{ 'homepage.ideal_vehicles.diesel'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.diesel'|trans }}</h3>
                        </div>
                    </a>
                </div>
            </div>
        </section>
        
        <!-- Popular Brands -->
        <section class="py-24">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold mb-6 text-gray-800 text-center">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600">
                        {{ 'homepage.popular_brands.title'|trans }}
                    </span>
                </h2>
                <p class="text-gray-600 text-center text-lg mb-16">{{ 'homepage.popular_brands.description'|trans }}</p>
                
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
                    {% for brand in ['audi', 'bmw', 'mercedes', 'hyundai', 'volkswagen', 'toyota'] %}
                        <div class="group">
                            <div class="bg-white rounded-2xl shadow-lg p-6 transform transition-all duration-300 hover:scale-110 hover:shadow-2xl">
                                <img 
                                    src="{{ asset('website/homepage/' ~ brand ~ '-logo.png') }}" 
                                    alt="{{ brand|capitalize }}" 
                                    class="w-24 h-24 mx-auto object-contain filter transition-all duration-300 group-hover:brightness-110"
                                    loading="lazy">
                            </div>
                            <p class="mt-4 text-center text-gray-700 font-medium capitalize">{{ brand }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        
        <!-- Price Indicator -->
        <section class="py-12">
            <div class="container mx-auto px-4">
                <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-xl p-8 text-white">
                    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
                        <div class="md:w-1/2">
                            <h2 class="text-3xl font-bold mb-4">{{ 'homepage.price_indicator.title'|trans }}</h2>
                            <p class="text-lg opacity-90 mb-6">{{ 'homepage.price_indicator.description'|trans }}</p>
                            <ul class="space-y-3">
                                <li class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                    </svg>
                                    {{ 'homepage.price_indicator.feature1'|trans }}
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                    </svg>
                                    {{ 'homepage.price_indicator.feature2'|trans }}
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                    </svg>
                                    {{ 'homepage.price_indicator.feature3'|trans }}
                                </li>
                            </ul>
                        </div>
                        <div class="md:w-1/2 flex justify-center">
                            <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm">
                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-sm">{{ 'homepage.price_indicator.low_price'|trans }}</span>
                                    <span class="text-sm">{{ 'homepage.price_indicator.high_price'|trans }}</span>
                                </div>
                                <div class="relative h-4 bg-white/20 rounded-full overflow-hidden">
                                    <div class="absolute top-0 left-0 h-full w-2/3 bg-green-400 rounded-full"></div>
                                    <div class="absolute top-0 left-[66%] h-6 w-1 bg-white -mt-1"></div>
                                </div>
                                <p class="text-center mt-4 text-sm opacity-75">
                                    {{ 'homepage.price_indicator.indicator'|trans }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Modern CTA Section -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-12 shadow-xl">
                    <div class="flex flex-col items-center text-center">
                        <!-- Icon -->
                        <div class="mb-8">
                            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center">
                                <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                            </div>
                        </div>

                        <h2 class="text-4xl font-bold text-white mb-6">
                            {{ 'homepage.cta.title'|trans }}
                        </h2>
                        
                        <p class="text-xl text-white/90 mb-8 max-w-2xl">
                            {{ 'homepage.cta.description'|trans }}
                        </p>

                        <!-- Simple button with hover effect -->
                        <a href="{{ path('app_cars') }}" 
                           class="inline-flex items-center px-8 py-4 bg-white rounded-full text-indigo-600 font-semibold hover:bg-indigo-50 transition-colors duration-300">
                            {{ 'homepage.cta.button'|trans }}
                            <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}