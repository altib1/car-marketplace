{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.title'|trans }}{% endblock %}
        
{% block body %}
    <div class="w-full">
        <!-- menu -->
        {% include 'menu/index.html.twig' %}
    </div>

    <div class="flex-1 p-4 mt-20 overflow-y-auto scroll-hidden ">

        <!-- Hero Section -->
        <section class="py-8 sm:py-12 lg:py-16 rounded-xl relative overflow-hidden">
            <div class="container mx-auto px-4 relative z-10">
                <div class="flex flex-col lg:flex-row items-center justify-between gap-8 lg:gap-12">
                    <!-- Search Form -->
                    <div class="w-full lg:w-1/2 space-y-6">
                        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-800 leading-tight text-center lg:text-left">
                            {{ 'homepage.hero.title'|trans }} 
                            <span class="text-indigo-600 block sm:inline">{{ 'homepage.hero.subtitle'|trans }}</span>
                        </h1>

                        <p class="text-gray-600 text-base sm:text-lg mb-8 text-center lg:text-left max-w-xl mx-auto lg:mx-0">
                            {{ 'homepage.hero.description'|trans }}
                        </p>

                        <!-- Search Form Component -->
                        <div class="bg-white/95 backdrop-blur-sm p-4 sm:p-6 rounded-2xl shadow-lg transition-all duration-300 hover:shadow-xl">
                            {% include 'components/_search_form_home_page.html.twig' with {
                                'brands': brands,
                                'models': models,
                                'motorizationTypes': motorizationTypes,
                                'criteria': criteria
                            } %}
                        </div>
                    </div>

                    <!-- Snowy Toyota Scene -->
                    <div class="hidden lg:block w-full md:w-1/2 lg:w-1/2 relative mt-8 lg:mt-0">
                        <div class="relative group hidden lg:block">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent rounded-xl transition-opacity duration-300 group-hover:opacity-0"></div>
                            <img 
                                src="{{ asset('website/homepage/car-homepage-hero.jpg') }}" 
                                alt="Toyota in Snow" 
                                class="w-full h-[300px] sm:h-[400px] hidden lg:block object-cover rounded-xl shadow-lg transition-transform duration-500 group-hover:scale-[1.02]"
                                loading="eager"
                            >
                            <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAiIGhlaWdodD0iMTAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGNpcmNsZSBjeD0iNSIgY3k9IjUiIHI9IjEiIGZpbGw9IndoaXRlIiBmaWxsLW9wYWNpdHk9IjAuMyIvPjwvc3ZnPg==')] opacity-50 pointer-events-none"></div>
                        </div>
                        <div class="absolute inset-0 bg-gradient-to-b from-white/20 to-transparent pointer-events-none"></div>
                    </div>
                </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-b from-blue-50/50 to-transparent pointer-events-none"></div>
        </section>

        <!-- Customer Reviews Section -->
        <section class="py-8 sm:py-12 lg:py-16">
           <div class="container mx-auto px-4 max-w-7xl">
               <!-- Section Header -->
               <div class="text-center mb-12">
                   <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
                       {{ 'homepage.reviews.title'|trans }}
                   </h2>
                   <div class="w-20 h-1 bg-indigo-600 mx-auto rounded-full"></div>
               </div>
        
               <!-- Reviews Grid -->
               <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                   {% for i in 1..3 %}
                       <div class="bg-white p-6 sm:p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 relative group">
                           <!-- Review Card Header -->
                           <div class="flex items-center justify-between mb-6">
                               <div class="flex space-x-1">
                                   {% for star in 1..5 %}
                                       <svg class="w-5 h-5 text-yellow-400 transition-transform duration-300 group-hover:scale-110" 
                                            fill="currentColor" 
                                            viewBox="0 0 20 20">
                                           <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                       </svg>
                                   {% endfor %}
                               </div>
                               <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center">
                                   <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                   </svg>
                               </div>
                           </div>
        
                           <!-- Review Content -->
                           <p class="text-gray-700 mb-6 text-base sm:text-lg leading-relaxed min-h-[100px]">
                               {{ ('homepage.reviews.review' ~ i)|trans }}
                           </p>
        
                           <!-- Reviewer Info -->
                           <div class="flex items-center justify-between mt-auto">
                               <div class="flex items-center gap-3">
                                   <!-- Avatar Placeholder -->
                                   <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-full flex items-center justify-center text-white font-medium">
                                       {{ ('homepage.reviews.reviewer' ~ i)|trans|slice(0, 1)|upper }}
                                   </div>
                                   <div>
                                       <span class="font-medium text-gray-900">
                                           {{ ('homepage.reviews.reviewer' ~ i)|trans }}
                                       </span>
                                   </div>
                               </div>
                               
                               <!-- Decorative Quote Icon -->
                               <svg class="w-8 h-8 text-gray-200" fill="currentColor" viewBox="0 0 24 24">
                                   <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                               </svg>
                           </div>
        
                           <!-- Hover Effect Overlay -->
                           <div class="absolute inset-0 bg-gradient-to-t from-indigo-50/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl pointer-events-none"></div>
                       </div>
                   {% endfor %}
               </div>
           </div>
        </section>
        
        <!-- Ideal Vehicles -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                    <!-- Section Header -->
                    <div class="text-center mb-12">
                        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
                            {{ 'homepage.ideal_vehicles.title'|trans }}
                        </h2>
                        <div class="w-20 h-1 bg-indigo-600 mx-auto rounded-full"></div>
                    </div>   
                    <!-- Ideal Vehicles Grid -->             
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    <a href="{{ path('app_cars', {'price_max': '10000'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/petit-prix.jpg') }}" alt="{{ 'homepage.ideal_vehicles.low_price'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.low_price'|trans }}</h3>
                        </div>
                    </a>
                    <a href="{{ path('app_cars', {'fuel_type': 'electric'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/electrique.jpg') }}" alt="{{ 'homepage.ideal_vehicles.electric'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.electric'|trans }}</h3>
                        </div>
                    </a>
                    <a href="{{ path('app_cars', {'fuel_type': 'hybrid'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/hybride.jpg') }}" alt="{{ 'homepage.ideal_vehicles.hybrid'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.hybrid'|trans }}</h3>
                        </div>
                    </a>
                    <a href="{{ path('app_cars', {'fuel_type': 'diesel'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <div class="relative overflow-hidden">
                            <img src="{{ asset('website/homepage/diesel.jpg') }}" alt="{{ 'homepage.ideal_vehicles.diesel'|trans }}" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="p-6">
                            <h3 class="font-bold text-xl text-center text-gray-800">{{ 'homepage.ideal_vehicles.diesel'|trans }}</h3>
                        </div>
                    </a>
                </div>
            </div>
        </section>
        
        <!-- Popular Brands -->
        <section class="py-24">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold mb-6 text-gray-800 text-center">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600">
                        {{ 'homepage.popular_brands.title'|trans }}
                    </span>
                </h2>
                <p class="text-gray-600 text-center text-lg mb-16">{{ 'homepage.popular_brands.description'|trans }}</p>
                
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
                    {% for brand in ['audi', 'bmw', 'mercedes', 'hyundai', 'volkswagen', 'toyota'] %}
                        <div class="group">
                            <div class="bg-white rounded-2xl shadow-lg p-6 transform transition-all duration-300 hover:scale-110 hover:shadow-2xl">
                                <img 
                                    src="{{ asset('website/homepage/' ~ brand ~ '-logo.png') }}" 
                                    alt="{{ brand|capitalize }}" 
                                    class="w-24 h-24 mx-auto object-contain filter transition-all duration-300 group-hover:brightness-110"
                                    loading="lazy">
                            </div>
                            <p class="mt-4 text-center text-gray-700 font-medium capitalize">{{ brand }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        
        <!-- Price Indicator -->
        <section class="py-12">
            <div class="container mx-auto px-4">
                <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-xl p-8 text-white">
                    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
                        <div class="md:w-1/2">
                            <h2 class="text-3xl font-bold mb-4">{{ 'homepage.price_indicator.title'|trans }}</h2>
                            <p class="text-lg opacity-90 mb-6">{{ 'homepage.price_indicator.description'|trans }}</p>
                            <ul class="space-y-3">
                                <li class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                    </svg>
                                    {{ 'homepage.price_indicator.feature1'|trans }}
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                    </svg>
                                    {{ 'homepage.price_indicator.feature2'|trans }}
                                </li>
                                <li class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                    </svg>
                                    {{ 'homepage.price_indicator.feature3'|trans }}
                                </li>
                            </ul>
                        </div>
                        <div class="md:w-1/2 flex justify-center">
                            <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm">
                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-sm">{{ 'homepage.price_indicator.low_price'|trans }}</span>
                                    <span class="text-sm">{{ 'homepage.price_indicator.high_price'|trans }}</span>
                                </div>
                                <div class="relative h-4 bg-white/20 rounded-full overflow-hidden">
                                    <div class="absolute top-0 left-0 h-full w-2/3 bg-green-400 rounded-full"></div>
                                    <div class="absolute top-0 left-[66%] h-6 w-1 bg-white -mt-1"></div>
                                </div>
                                <p class="text-center mt-4 text-sm opacity-75">
                                    {{ 'homepage.price_indicator.indicator'|trans }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Modern CTA Section -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-12 shadow-xl">
                    <div class="flex flex-col items-center text-center">
                        <!-- Icon -->
                        <div class="mb-8">
                            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center">
                                <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                            </div>
                        </div>

                        <h2 class="text-4xl font-bold text-white mb-6">
                            {{ 'homepage.cta.title'|trans }}
                        </h2>
                        
                        <p class="text-xl text-white/90 mb-8 max-w-2xl">
                            {{ 'homepage.cta.description'|trans }}
                        </p>

                        <!-- Simple button with hover effect -->
                        <a href="{{ path('app_cars') }}" 
                           class="inline-flex items-center px-8 py-4 bg-white rounded-full text-indigo-600 font-semibold hover:bg-indigo-50 transition-colors duration-300">
                            {{ 'homepage.cta.button'|trans }}
                            <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}