{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}
        
{% block body %}
            <div class="w-full">
                    <!-- menu -->
                    {% include 'menu/index.html.twig' %}
            </div>
    
            <div class="flex-1 p-4 mt-20 overflow-y-auto scroll-hidden ">

                    <!-- Hero Section -->
                    <section class=" py-16 rounded-xl">
                        <div class="container mx-auto px-4">
                            <div class="flex flex-col md:flex-row items-center justify-between gap-12">
                                <!-- Search Form -->
                                <div class="w-full md:w-1/2 space-y-6">
                                    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 leading-tight">
                                        Trouvez la voiture <span class="text-indigo-600">de vos rêves</span>
                                    </h1>
                                    <p class="text-gray-600 text-lg mb-8">
                                        Explorez notre sélection exclusive de véhicules et trouvez celui qui vous correspond.
                                    </p>
                                    {% include 'components/_search_form_home_page.html.twig' with {
                                        'brands': brands,
                                        'models': models,
                                        'motorizationTypes': motorizationTypes,
                                        'criteria': criteria
                                    } %}
                                </div>

                                <!-- Car Image with Animation -->
                                <div class="w-full md:w-1/2 transform hover:scale-105 transition-transform duration-300">
                                    <img src="{{ asset('website/homepage/hero-image.png') }}" 
                                         alt="Car" 
                                         class="w-full h-auto object-cover rounded-2xl shadow-2xl"
                                         loading="lazy">
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Customer Reviews Section -->
                    <section class="py-12">
                        <div class="container mx-auto px-4">
                            <h2 class="text-3xl font-bold mb-8 text-gray-800">Avis de nos clients satisfaits</h2>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                                <div class="bg-white p-6 rounded-xl shadow-lg">
                                    <div class="flex items-center mb-4">
                                        <div class="text-yellow-400">★★★★★</div>
                                    </div>
                                    <p class="text-gray-700 mb-4">"Service exceptionnel, j'ai trouvé ma voiture idéale en quelques clics!"</p>
                                    <div class="flex items-center">
                                        <span class="ml-3 font-medium">Marie L.</span>
                                    </div>
                                </div>
                                <div class="bg-white p-6 rounded-xl shadow-lg">
                                    <div class="flex items-center mb-4">
                                        <div class="text-yellow-400">★★★★★</div>
                                    </div>
                                    <p class="text-gray-700 mb-4">"Comparaison facile et prix transparents. Je recommande!"</p>
                                    <div class="flex items-center">
                                        <span class="ml-3 font-medium">Pierre D.</span>
                                    </div>
                                </div>
                                <div class="bg-white p-6 rounded-xl shadow-lg">
                                    <div class="flex items-center mb-4">
                                        <div class="text-yellow-400">★★★★★</div>
                                    </div>
                                    <p class="text-gray-700 mb-4">"Une expérience d'achat automobile moderne et agréable."</p>
                                    <div class="flex items-center">
                                        <span class="ml-3 font-medium">Sophie M.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    
                    <!-- Ideal Vehicles -->
                    <section class="py-16">
                        <div class="container mx-auto px-4">
                            <h2 class="text-3xl font-bold mb-8 text-gray-800">Trouvez votre occasion idéale</h2>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                                <a href="{{ path('app_cars', {'price_max': '10000'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/homepage/petit-prix.jpg') }}" alt="Petit Prix" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Petits prix</h3>
                                    </div>
                                </a>
                                <a href="{{ path('app_cars', {'fuel_type': 'electric'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/homepage/electrique.jpg') }}" alt="Électriques" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Électriques</h3>
                                    </div>
                                </a>
                                <a href="{{ path('app_cars', {'fuel_type': 'hybrid'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/homepage/hybride.jpg') }}" alt="Hybrides" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Hybrides</h3>
                                    </div>
                                </a>
                                <a href="{{ path('app_cars', {'fuel_type': 'diesel'}) }}" class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                                    <div class="relative overflow-hidden">
                                        <img src="{{ asset('website/homepage/diesel.jpg') }}" alt="Familiales" class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
                                    </div>
                                    <div class="p-6">
                                        <h3 class="font-bold text-xl text-center text-gray-800">Diesel</h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </section>
                    
                    <!-- Popular Brands -->
                    <section class=" py-24">
                        <div class="container mx-auto px-4">
                            <h2 class="text-4xl font-bold mb-6 text-gray-800 text-center">
                                <span class="bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600">
                                    Marques Populaires
                                </span>
                            </h2>
                            <p class="text-gray-600 text-center text-lg mb-16">Les constructeurs les plus recherchés sur notre plateforme</p>
                            
                            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
                                {% for brand in ['audi', 'bmw', 'mercedes', 'hyundai', 'volkswagen', 'toyota'] %}
                                    <div class="group">
                                        <div class="bg-white rounded-2xl shadow-lg p-6 transform transition-all duration-300 hover:scale-110 hover:shadow-2xl">
                                            <img 
                                                src="{{ asset('website/homepage/' ~ brand ~ '-logo.png') }}" 
                                                alt="{{ brand|capitalize }}" 
                                                class="w-24 h-24 mx-auto object-contain filter transition-all duration-300 group-hover:brightness-110"
                                                loading="lazy">
                                        </div>
                                        <p class="mt-4 text-center text-gray-700 font-medium capitalize">{{ brand }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </section>
                    
                    <!-- Price Indicator -->
                    <section class="py-12">
                        <div class="container mx-auto px-4">
                            <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-xl p-8 text-white">
                                <div class="flex flex-col md:flex-row items-center justify-between gap-8">
                                    <div class="md:w-1/2">
                                        <h2 class="text-3xl font-bold mb-4">Indicateur prix du marché</h2>
                                        <p class="text-lg opacity-90 mb-6">Notre algorithme analyse en temps réel des milliers d'annonces pour vous garantir les meilleurs prix du marché.</p>
                                        <ul class="space-y-3">
                                            <li class="flex items-center">
                                                <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                                </svg>
                                                Comparaison avec plus de 100 000 véhicules
                                            </li>
                                            <li class="flex items-center">
                                                <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                                </svg>
                                                Mise à jour quotidienne des prix
                                            </li>
                                            <li class="flex items-center">
                                                <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                                                </svg>
                                                Estimation fiable de la valeur résiduelle
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="md:w-1/2 flex justify-center">
                                        <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm">
                                            <div class="flex items-center justify-between mb-4">
                                                <span class="text-sm">Prix bas</span>
                                                <span class="text-sm">Prix élevé</span>
                                            </div>
                                            <div class="relative h-4 bg-white/20 rounded-full overflow-hidden">
                                                <div class="absolute top-0 left-0 h-full w-2/3 bg-green-400 rounded-full"></div>
                                                <div class="absolute top-0 left-[66%] h-6 w-1 bg-white -mt-1"></div>
                                            </div>
                                            <p class="text-center mt-4 text-sm opacity-75">
                                                Indicateur de prix pour votre recherche
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Modern CTA Section -->
                    <section class="py-16">
                        <div class="container mx-auto px-4">
                            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-12 shadow-xl">
                                <div class="flex flex-col items-center text-center">
                                    <!-- Icon -->
                                    <div class="mb-8">
                                        <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center">
                                            <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                        </div>
                                    </div>

                                    <h2 class="text-4xl font-bold text-white mb-6">
                                        Trouvez votre prochaine voiture
                                    </h2>
                                    
                                    <p class="text-xl text-white/90 mb-8 max-w-2xl">
                                        Une sélection exclusive de véhicules qui répondent à vos attentes
                                    </p>

                                    <!-- Simple button with hover effect -->
                                    <a href="{{ path('app_cars') }}" 
                                       class="inline-flex items-center px-8 py-4 bg-white rounded-full text-indigo-600 font-semibold hover:bg-indigo-50 transition-colors duration-300">
                                        Découvrir nos véhicules
                                        <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>
            </div>
{% endblock %}
