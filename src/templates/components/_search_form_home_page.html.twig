<form action="{{ path('app_cars') }}" method="get" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="space-y-1">
            <label for="brand" class="block text-sm font-medium text-gray-700">Marque</label>
            <select name="brand" id="publication_brand" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <option value="">Sélectionner une marque</option>
                {% for brand in brands %}
                    <option value="{{ brand.id }}" {% if criteria.brand == brand.id %}selected{% endif %}>{{ brand.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="space-y-1">
            <label for="model" class="block text-sm font-medium text-gray-700">Modèle</label>
            <select name="model" id="publication_model" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <option value="">Sélectionner un modèle</option>
                {% for model in models %}
                    <option value="{{ model.id }}" {% if criteria.model == model.id %}selected{% endif %}>{{ model.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="space-y-1">
            <label for="motorization_type" class="block text-sm font-medium text-gray-700">Énergie</label>
            <select name="motorization_type" id="publication_motorizationType" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <option value="">Type de motorisation</option>
                {% for motorizationType in motorizationTypes %}
                    <option value="{{ motorizationType.id }}" {% if criteria.motorization_type == motorizationType.id %}selected{% endif %}>{{ motorizationType.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="space-y-1">
            <label for="price" class="block text-sm font-medium text-gray-700">Prix</label>
            <div class="flex gap-2">
                <input type="number" name="price_min" id="price_min" value="{{ criteria.price_min }}" placeholder="Min" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <input type="number" name="price_max" id="price_max" value="{{ criteria.price_max }}" placeholder="Max" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>
        </div>

        <div class="space-y-1">
            <label for="year" class="block text-sm font-medium text-gray-700">Année</label>
            <div class="flex gap-2">
                <input type="number" name="year_min" id="year_min" value="{{ criteria.year_min }}" placeholder="Min" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <input type="number" name="year_max" id="year_max" value="{{ criteria.year_max }}" placeholder="Max" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>
        </div>
    </div>

    <button type="submit" class="w-full md:w-auto px-6 py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition-colors">
        Rechercher
    </button>
</form>