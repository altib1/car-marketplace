{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
<div class="container mx-auto py-8 flex flex-col lg:flex-row gap-8">
    <!-- Filter Section -->
    <div class="w-full lg:w-1/4 bg-white p-6 rounded-xl shadow-xl">
        <form method="get" action="{{ path('app_cars') }}">
            <div class="space-y-6">
                <!-- Search -->
                <div>
                    <label for="q" class="block text-sm font-medium text-gray-700">Search</label>
                    <input type="text" name="q" id="q" value="{{ criteria.q }}" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Price -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="price_min" class="block text-sm font-medium text-gray-700">Min Price</label>
                        <input type="number" name="price_min" id="price_min" value="{{ criteria.price_min }}" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="price_max" class="block text-sm font-medium text-gray-700">Max Price</label>
                        <input type="number" name="price_max" id="price_max" value="{{ criteria.price_max }}" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <!-- Year -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="year_min" class="block text-sm font-medium text-gray-700">Min Year</label>
                        <input type="number" name="year_min" id="year_min" value="{{ criteria.year_min }}" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="year_max" class="block text-sm font-medium text-gray-700">Max Year</label>
                        <input type="number" name="year_max" id="year_max" value="{{ criteria.year_max }}" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <!-- Brand -->
                <div>
                    <label for="brand" class="block text-sm font-medium text-gray-700">Brand</label>
                    <select name="brand" id="publication_brand" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                        <option value="">Select Brand</option>
                        {% for brand in brands %}
                            <option value="{{ brand.id }}" {% if criteria.brand == brand.id %}selected{% endif %}>{{ brand.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Model -->
                <div>
                    <label for="model" class="block text-sm font-medium text-gray-700">Model</label>
                    <select name="model" id="publication_model" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                        <option value="">Select Model</option>
                        {% for model in models %}
                            <option value="{{ model.id }}" {% if criteria.model == model.id %}selected{% endif %}>{{ model.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Motorization -->
                <div>
                    <label for="motorization_type" class="block text-sm font-medium text-gray-700">Motorization Type</label>
                    <select name="motorization_type" id="publication_motorizationType" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500">
                        <option value="">Select Motorization Type</option>
                        {% for motorizationType in motorizationTypes %}
                            <option value="{{ motorizationType.id }}" {% if criteria.motorization_type == motorizationType.id %}selected{% endif %}>{{ motorizationType.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-xl hover:bg-blue-700 transition">Search</button>
            </div>
        </form>
    </div>

<!-- Results Section -->
<div class="w-full lg:w-3/4">
    {% if results.results|length > 0 %}
        <div class="grid grid-cols-1 gap-6">
            {% for publication in results.results %}
                <div class="bg-white border border-gray-200 rounded-xl shadow-lg hover:shadow-xl transition-all flex flex-col md:flex-row">
                    <!-- Image Section -->
                    <div class="relative w-full md:w-1/3 bg-cover bg-center h-full rounded-t-xl md:rounded-l-xl"
                         style="background-image: url('{{ publication.imageFilenames|length > 0 ? asset('uploads/brochures/' ~ publication.imageFilenames[0]) : 'your-placeholder-image-url.jpg' }}');">
                        {% if publication.imageFilenames|length == 0 %}
                            <div class="absolute inset-0 flex items-center justify-center bg-gray-300 opacity-80 rounded-t-xl md:rounded-l-xl">
                                <p class="text-white text-sm">No image available</p>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Car Info Section -->
                    <div class="p-6 w-full md:w-2/3 flex flex-col justify-between">
                        <h2 class="text-xl font-semibold text-gray-800">{{ publication.title }}</h2>
                        <div class="mt-4 text-lg text-gray-600">
                            <div class="flex items-center space-x-2">
                                <span class="text-sm text-gray-500">Price</span>
                                <span class="font-semibold">{{ publication.price }} â‚¬</span>
                            </div>
                            <div class="flex items-center space-x-2 mt-2">
                                <span class="text-sm text-gray-500">Year</span>
                                <span class="font-semibold">{{ publication.year }}</span>
                            </div>
                            <div class="flex items-center space-x-2 mt-2">
                                <span class="text-sm text-gray-500">Brand</span>
                                <span class="font-semibold">{{ publication.brand }}</span>
                            </div>
                            <div class="flex items-center space-x-2 mt-2">
                                <span class="text-sm text-gray-500">Model</span>
                                <span class="font-semibold">{{ publication.model }}</span>
                            </div>
                        </div>
                        <a href="{{ path('app_car_show', { id: publication.id }) }}" class="inline-block text-blue-600 hover:text-blue-800 mt-4 text-sm">View Details</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-gray-500 mt-6">No results found for your search criteria.</p>
    {% endif %}
</div>

<!-- Pagination Section -->
{% if results.pagination.total_pages > 1 %}
    <div class="mt-6 flex justify-center">
        <nav aria-label="Pagination" class="relative w-full max-w-4xl">
            <div class="flex items-center bg-white shadow-lg rounded-lg overflow-hidden">
                <!-- Image on the left covering the full height -->
                <div class="w-16 bg-cover bg-center h-full" style="background-image: url('your-image-url.jpg');"></div>
                
                <!-- Pagination controls on the right -->
                <ul class="inline-flex space-x-4 py-2 px-6 w-full justify-between items-center">
                    {% if results.pagination.previous_page %}
                        <li>
                            <a href="{{ path('app_publications_search', criteria|merge({ page: results.pagination.previous_page })) }}" 
                               class="bg-white border border-gray-300 text-gray-600 hover:bg-gray-200 px-4 py-2 rounded-l-xl flex items-center transition duration-300">
                                <span class="sr-only">Previous</span>
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l4.293 4.293a1 1 0 01-1.414 1.414l-5-5a1 1 0 010-1.414l5-5a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        </li>
                    {% endif %}

                    <!-- Current page info -->
                    <li class="text-gray-500 text-sm">
                        Page {{ results.pagination.current_page }} of {{ results.pagination.total_pages }}
                    </li>

                    {% if results.pagination.next_page %}
                        <li>
                            <a href="{{ path('app_publications_search', criteria|merge({ page: results.pagination.next_page })) }}" 
                               class="bg-white border border-gray-300 text-gray-600 hover:bg-gray-200 px-4 py-2 rounded-r-xl flex items-center transition duration-300">
                                <span class="sr-only">Next</span>
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10l-4.293-4.293a1 1 0 011.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </div>
{% endif %}


{% endblock %}
