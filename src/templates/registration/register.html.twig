{% extends 'base.html.twig' %}

{% block title %}Create Your Account{% endblock %}

{% block body %}
<div class="flex max-w-[1400px] justify-center items-start lg:items-center mx-auto mt-8 lg:min-h-screen">
    <!-- Left: Image -->
    <div class="hidden lg:block lg:w-1/2 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/90 to-blue-800/90 mix-blend-multiply"></div>
        <img src="{{ asset('website/homepage/logo-signup.jpg')}}" 
             alt="Background" 
             class="object-cover w-full h-full">
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-white text-center p-12">
                <h2 class="text-4xl font-bold mb-4">{{ 'registration.hero.title'|trans }}</h2>
                <p class="text-lg text-white/80">{{ 'registration.hero.subtitle'|trans }}</p>
            </div>
        </div>
    </div>

    <!-- Right: Registration Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-16">
        <div class="w-full max-w-xl space-y-8">
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-900">{{ 'registration.form.title'|trans }}</h1>
                <p class="mt-2 text-gray-600">{{ 'registration.form.signin.text'|trans }}
                    <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:text-blue-500">
                        {{ 'registration.form.signin.link'|trans }}
                    </a>
                </p>
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-50 text-red-800 rounded-lg p-4 flex items-center">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(registrationForm, { 
                attr: { 
                    class: 'mt-8 space-y-6',
                    novalidate: 'novalidate'
                } 
            }) }}

                <!-- Name and Lastname -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-2">
                        {{ form_label(registrationForm.name, 'registration.form.labels.firstname'|trans, { 
                            label_attr: { 
                                class: 'block text-sm font-medium text-gray-700'
                            } 
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.name, { 
                                attr: { 
                                    class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    placeholder: 'registration.form.placeholders.firstname'|trans
                                } 
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.name, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                    </div>

                    <div class="space-y-2">
                        {{ form_label(registrationForm.lastname, 'registration.form.labels.lastname'|trans, { 
                            label_attr: { 
                                class: 'block text-sm font-medium text-gray-700'
                            } 
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.lastname, { 
                                attr: { 
                                    class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    placeholder: 'registration.form.placeholders.lastname'|trans
                                } 
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.lastname, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                    </div>
                </div>

                <!-- Email Input -->
                <div class="space-y-2">
                    {{ form_label(registrationForm.email, 'registration.form.labels.email'|trans, { 
                        label_attr: { 
                            class: 'block text-sm font-medium text-gray-700'
                        } 
                    }) }}
                    <div class="relative">
                        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                            </svg>
                        </div>
                        {{ form_widget(registrationForm.email, { 
                            attr: { 
                                class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                placeholder: 'registration.form.placeholders.email'|trans
                            } 
                        }) }}
                    </div>
                    {{ form_errors(registrationForm.email, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                </div>

                <!-- Phone and Gender -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-2">
                        {{ form_label(registrationForm.phoneNumber, 'registration.form.labels.phone'|trans, { 
                            label_attr: { 
                                class: 'block text-sm font-medium text-gray-700'
                            } 
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.phoneNumber, { 
                                attr: { 
                                    class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    placeholder: 'registration.form.placeholders.phone'|trans
                                } 
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.phoneNumber, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                    </div>

                    <div class="space-y-2">
                        {{ form_label(registrationForm.gender, 'registration.form.labels.gender'|trans, { 
                            label_attr: { 
                                class: 'block text-sm font-medium text-gray-700'
                            } 
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.gender, { 
                                attr: { 
                                    class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none'
                                } 
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.gender, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                    </div>
                </div>

                <!-- Password Fields -->
                <div class="space-y-4">
                    <div class="space-y-2">
                        {{ form_label(registrationForm.plainPassword.first, 'registration.form.labels.password'|trans, { 
                            label_attr: { 
                                class: 'block text-sm font-medium text-gray-700'
                            } 
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.plainPassword.first, { 
                                attr: { 
                                    class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    placeholder: 'registration.form.placeholders.password'|trans
                                } 
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.plainPassword.first, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                    </div>

                    <div class="space-y-2">
                        {{ form_label(registrationForm.plainPassword.second, 'registration.form.labels.confirm_password'|trans, { 
                            label_attr: { 
                                class: 'block text-sm font-medium text-gray-700'
                            } 
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.plainPassword.second, { 
                                attr: { 
                                    class: 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    placeholder: 'registration.form.placeholders.confirm_password'|trans
                                } 
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.plainPassword.second, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}
                    </div>
                </div>

                <!-- Terms Checkbox -->
                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, { 
                        attr: { 
                            class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
                        } 
                    }) }}
                    {{ form_label(registrationForm.agreeTerms, 'registration.form.terms.label'|trans, { 
                        label_attr: { 
                            class: 'ml-2 block text-sm text-gray-700'
                        }
                    }) }}
                </div>
                {{ form_errors(registrationForm.agreeTerms, { attr: { class: 'text-sm text-red-600 mt-1' } }) }}

                <!-- Submit Button -->
                <div>
                    <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all">
                        {{ 'registration.form.submit'|trans }}
                    </button>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}