{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="bg-gray-100 flex justify-center items-center min-h-screen py-12">
    <!-- Left: Image -->
    <div class="w-1/2 h-full hidden lg:block">
        <img src="https://placehold.co/800x/667fff/ffffff.png?text=Your+Image&font=Montserrat" alt="Placeholder Image" class="object-cover w-full h-full">
    </div>
    <!-- Right: Register Form -->
    <div class="lg:p-36 md:p-52 sm:20 p-8 w-full lg:w-1/2">
        <h1 class="text-2xl font-semibold mb-4">Register</h1>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-4 bg-red-100 text-red-700 px-4 py-2 rounded">
                {{ flash_error }}
            </div>
        {% endfor %}

        {{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}
        
        <!-- Name and Lastname -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                {{ form_label(registrationForm.name, null, { label_attr: { class: 'block text-gray-600' } }) }}
                {{ form_widget(registrationForm.name, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
                {{ form_errors(registrationForm.name) }}
            </div>
            <div>
                {{ form_label(registrationForm.lastname, null, { label_attr: { class: 'block text-gray-600' } }) }}
                {{ form_widget(registrationForm.lastname, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
                {{ form_errors(registrationForm.lastname) }}
            </div>
        </div>

        <!-- Email Input -->
        <div>
            {{ form_label(registrationForm.email, null, { label_attr: { class: 'block text-gray-600' } }) }}
            {{ form_widget(registrationForm.email, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <!-- Phone and Gender -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                {{ form_label(registrationForm.phoneNumber, null, { label_attr: { class: 'block text-gray-600' } }) }}
                {{ form_widget(registrationForm.phoneNumber, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
                {{ form_errors(registrationForm.phoneNumber) }}
            </div>
            <div>
                {{ form_label(registrationForm.gender, null, { label_attr: { class: 'block text-gray-600' } }) }}
                {{ form_widget(registrationForm.gender, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
                {{ form_errors(registrationForm.gender) }}
            </div>
        </div>
        
        <!-- Password Input -->
        <div>
            {{ form_label(registrationForm.plainPassword.first, null, { label_attr: { class: 'block text-gray-600' } }) }}
            {{ form_widget(registrationForm.plainPassword.first, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
        
        <!-- Confirm Password Input -->
        <div>
            {{ form_label(registrationForm.plainPassword.second, null, { label_attr: { class: 'block text-gray-600' } }) }}
            {{ form_widget(registrationForm.plainPassword.second, { attr: { class: 'w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500' } }) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>
        
        <!-- Agree Terms Checkbox -->
        <div class="flex items-center">
            {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'mr-2' } }) }}
            {{ form_label(registrationForm.agreeTerms, null, { label_attr: { class: 'text-gray-600' } }) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        
        <!-- Submit Button -->
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md py-2 px-4 w-full">
            Register
        </button>

        {{ form_end(registrationForm) }}
        
        <!-- Login Link -->
        <div class="mt-6 text-blue-500 text-center">
            <a href="{{ path('app_login') }}" class="hover:underline">Already have an account? Login here</a>
        </div>
    </div>
</div>
{% endblock %}