{% extends 'base.html.twig' %}

{% block title %}{{ 'about.title'|trans }} - AutoMarket360{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="relative min-h-[80vh] md:min-h-[60vh] flex items-center bg-fixed bg-cover bg-center" style="background-image: url('/images/hero-cars.jpg');">
        <div class="absolute rounded-lg inset-0 bg-gradient-to-b md:bg-gradient-to-r from-blue-900/95 to-black/90"></div>
        <div class="container mx-auto px-4 py-20 md:py-0 relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 text-white animate-fade-in leading-tight">
                    {{ 'about.hero.title'|trans }}
                </h1>
                <p class="text-lg sm:text-xl md:text-2xl text-blue-100 max-w-2xl mx-auto">
                    {{ 'about.hero.description'|trans }}
                </p>
                <div class="mt-8">
                    <a href="{{ path('app_cars') }}" 
                       class="group w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-blue-600 rounded-full hover:bg-blue-700 focus:ring-4 focus:ring-blue-500/50 transition-all duration-300 shadow-lg hover:shadow-xl">
                        {{ 'about.hero.cta'|trans }}
                        <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    {# Platform Benefits #}
    <section class="py-12 md:py-20">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
                {% for benefit in ['search', 'connect', 'decide'] %}
                    <div class="group h-full">
                        <div class="h-full bg-white rounded-2xl p-6 md:p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                            <div class="w-14 h-14 md:w-16 md:h-16 mb-6 flex items-center justify-center bg-blue-100 rounded-full text-blue-600">
                                {% if benefit == 'search' %}
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M15.5 14h-.79l-.28-.27a6.5 6.5 0 001.48-5.34c-.47-2.78-2.79-5-5.59-5.34a6.505 6.505 0 00-7.27 7.27c.34 2.8 2.56 5.12 5.34 5.59a6.5 6.5 0 005.34-1.48l.27.28v.79l4.25 4.25c.41.41 1.08.41 1.49 0 .41-.41.41-1.08 0-1.49L15.5 14zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                                    </svg>
                                {% elseif benefit == 'connect' %}
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            <h3 class="text-xl md:text-2xl font-bold mb-4">{{ ('about.benefits.' ~ benefit ~ '.title')|trans }}</h3>
                            <p class="text-gray-600 text-lg">{{ ('about.benefits.' ~ benefit ~ '.description')|trans }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# How It Works #}
    <section class="py-12 md:py-20 bg-white rounded-lg">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 md:mb-16">{{ 'about.how_it_works.title'|trans }}</h2>
            <div class="max-w-5xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                    {% for step in ['browse', 'contact', 'meet'] %}
                        <div class="relative flex flex-col items-center">
                            <div class="w-16 h-16 md:w-12 md:h-12 rounded-full bg-blue-600 text-white flex items-center justify-center text-2xl md:text-xl font-bold mb-6">
                                {{ loop.index }}
                            </div>
                            {% if not loop.last %}
                                <div class="md:hidden absolute h-12 w-0.5 bottom-0 translate-y-full bg-blue-200"></div>
                                <div class="hidden md:block absolute top-1/4 left-full w-full h-0.5 bg-blue-200"></div>
                            {% endif %}
                            <h3 class="text-xl md:text-2xl font-bold mb-4 text-center">
                                {{ ('about.how_it_works.steps.' ~ step ~ '.title')|trans }}
                            </h3>
                            <p class="text-gray-600 text-center text-lg">
                                {{ ('about.how_it_works.steps.' ~ step ~ '.description')|trans }}
                            </p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    {# Features Grid #}
    <section class="py-12 md:py-20 ">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
                    {% for feature in ['listings', 'search', 'filters', 'messaging'] %}
                        <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300">
                            <div class="flex flex-col sm:flex-row items-center sm:items-start text-center sm:text-left">
                                <div class="flex-shrink-0 mb-4 sm:mb-0">
                                    <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                                        {% if feature == 'listings' %}
                                            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M19 4H5a2 2 0 00-2 2v12a2 2 0 002 2h14a2 2 0 002-2V6a2 2 0 00-2-2zm0 14H5V6h14v12zm-7-2h6v-2h-6v2zm0-4h6v-2h-6v2zm0-4h6V6h-6v2zM7 8h2v2H7V8zm0 4h2v2H7v-2zm0 4h2v2H7v-2z"/>
                                            </svg>
                                        {% elseif feature == 'search' %}
                                            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M15.5 14h-.79l-.28-.27a6.5 6.5 0 001.48-5.34c-.47-2.78-2.79-5-5.59-5.34a6.505 6.505 0 00-7.27 7.27c.34 2.8 2.56 5.12 5.34 5.59a6.5 6.5 0 005.34-1.48l.27.28v.79l4.25 4.25c.41.41 1.08.41 1.49 0 .41-.41.41-1.08 0-1.49L15.5 14zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                                            </svg>
                                        {% elseif feature == 'filters' %}
                                            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z"/>
                                            </svg>
                                        {% else %}
                                            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
                                            </svg>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="sm:ml-4">
                                    <h3 class="text-xl font-bold mb-2">{{ ('about.features.' ~ feature ~ '.title')|trans }}</h3>
                                    <p class="text-gray-600 text-lg">{{ ('about.features.' ~ feature ~ '.description')|trans }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    {# Coverage Section#}
    <section class="py-12 md:py-20 bg-blue-600 text-white rounded-lg">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-12">{{ 'about.coverage.title'|trans }}</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
                    {% for stat in [
                        {'number': '30+', 'label': 'about.coverage.cities'},
                        {'number': '1000+', 'label': 'about.coverage.listings'},
                        {'number': '3000+', 'label': 'about.coverage.users'},
                        {'number': '20+', 'label': 'about.coverage.brands'}
                    ] %}
                        <div class="p-4 rounded-lg hover:bg-white/10 transition-colors duration-300">
                            <div class="text-3xl md:text-4xl font-bold mb-2">{{ stat.number }}</div>
                            <div class="text-blue-200 text-lg">{{ stat.label|trans }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    {# Call to Action#}
    <section class="py-12 md:py-20">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-6">{{ 'about.cta.title'|trans }}</h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">{{ 'about.cta.description'|trans }}</p>
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <a href="{{ path('app_register') }}" 
                       class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-blue-600 rounded-full hover:bg-blue-700 transition-all duration-300 shadow-lg hover:shadow-xl">
                        {{ 'about.cta.register'|trans }}
                    </a>
                    <a href="{{ path('app_contact') }}" 
                       class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-blue-600 bg-blue-100 rounded-full hover:bg-blue-200 transition-all duration-300">
                        {{ 'about.cta.contact'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}