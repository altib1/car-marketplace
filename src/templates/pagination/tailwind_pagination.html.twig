{% if pageCount > 1 %}
    <div class="flex items-center justify-center space-x-1">
        {% if first is defined and current != first %}
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}"
               class="px-4 py-2 text-gray-500 bg-white rounded-lg hover:bg-gray-100 hover:text-gray-700">
                First
            </a>
        {% endif %}

        {% if previous is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
               class="px-4 py-2 text-gray-500 bg-white rounded-lg hover:bg-gray-100 hover:text-gray-700">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}"
                   class="px-4 py-2 text-gray-500 bg-white rounded-lg hover:bg-gray-100 hover:text-gray-700">
                    {{ page }}
                </a>
            {% else %}
                <span class="px-4 py-2 text-white bg-blue-600 rounded-lg">
                    {{ page }}
                </span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}"
               class="px-4 py-2 text-gray-500 bg-white rounded-lg hover:bg-gray-100 hover:text-gray-700">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        {% endif %}

        {% if last is defined and current != last %}
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}"
               class="px-4 py-2 text-gray-500 bg-white rounded-lg hover:bg-gray-100 hover:text-gray-700">
                Last
            </a>
        {% endif %}
    </div>
{% endif %}