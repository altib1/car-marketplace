{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans }} - AutoMarket360{% endblock %}

{% block body %}
<div class="min-h-screen  py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ 'contact.title'|trans }}</h1>
            <p class="text-xl text-gray-600">{{ 'contact.description'|trans }}</p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2">
                <!-- Contact Form -->
                <div class="p-8 lg:p-12">
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="mb-6 p-4 rounded-lg {{ type == 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
                                {{ message|trans }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div>
                            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div>
                            {{ form_label(form.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                            {{ form_errors(form.subject) }}
                        </div>

                        <div>
                            {{ form_label(form.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.message, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 min-h-[150px]'}}) }}
                            {{ form_errors(form.message) }}
                        </div>

                        <button type="submit" class="w-full bg-blue-600 text-white py-3 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                            {{ 'contact.form.submit'|trans }}
                        </button>
                    {{ form_end(form) }}
                </div>

                <!-- Contact Information -->
                <div class="bg-blue-600 p-8 lg:p-12 text-white">
                    <h3 class="text-2xl font-semibold mb-8">{{ 'contact.info.title'|trans }}</h3>
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <p>{{ 'contact.info.address'|trans }}</p>
                        </div>

                        <div class="flex items-start">
                            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <p>{{ 'contact.info.email'|trans }}</p>
                        </div>
{# 
