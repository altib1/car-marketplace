{% extends 'base.html.twig' %}

{% block title %}{{ 'terms.title'|trans }} - AutoMarket360{% endblock %}

{% block body %}
<div class="min-h-screen">

    <div class="container mx-auto px-4 py-12 max-w-5xl">
        <!-- Header -->
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ 'terms.intro.title'|trans }}</h1>
            <p class="text-xl text-gray-600 mb-4">{{ 'terms.intro.description'|trans }}</p>
            <p class="text-sm text-gray-500">{{ 'terms.intro.last_updated'|trans }}</p>
        </header>

        <!-- Table of Contents -->
        <nav class="mb-12 p-6 bg-white rounded-xl shadow-lg">
            <h2 class="text-xl font-semibold mb-4">{{ 'terms.toc.title'|trans }}</h2>
            <ul class="space-y-2">
                {% set sections = ['general', 'security', 'personal_data', 'technical', 'user_responsibilities', 'liability', 'copyright'] %}
                {% for section in sections %}
                    <li>
                        <a href="#{{ section }}" class="text-blue-600 hover:text-blue-800">{{ ('terms.sections.' ~ section ~ '.title')|trans }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>

        <!-- Content Sections -->
        {% for section in sections %}
            <section id="{{ section }}" class="mb-12 bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow scroll-mt-20">
                <h2 class="text-2xl font-semibold text-gray-800 mb-6">{{ ('terms.sections.' ~ section ~ '.title')|trans }}</h2>
                <div class="prose max-w-none text-gray-600 space-y-4">
                    {{ ('terms.sections.' ~ section ~ '.content')|trans|raw|nl2br }}
                </div>
            </section>
        {% endfor %}

        <!-- Hosting Info -->
        <div class="mt-12 bg-blue-50 rounded-xl p-8 border border-blue-100">
            <h2 class="text-xl font-semibold text-blue-800 mb-4">{{ 'terms.hosting.title'|trans }}</h2>
            <div class="text-blue-600 space-y-2">
                {{ 'terms.hosting.content'|trans|raw|nl2br }}
            </div>
        </div>

        <!-- Legal Framework -->
        <div class="mt-8 bg-gray-50 rounded-xl p-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">{{ 'terms.legal.title'|trans }}</h2>
            <div class="text-gray-600 space-y-2">
                {{ 'terms.legal.content'|trans|raw|nl2br }}
            </div>
        </div>

        <!-- Footer -->
        <footer class="mt-12 text-center text-gray-500 pb-8">
            <p>{{ 'terms.footer.copyright'|trans({'%year%': "now"|date("Y")}) }}</p>
        </footer>
    </div>
</div>
{% endblock %}