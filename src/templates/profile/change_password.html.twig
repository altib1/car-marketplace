{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
<div class="min-h-screen mt-8 py-12">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md">
        <!-- Header -->
        <div class="px-8 py-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h1 class="text-2xl font-bold text-gray-900">{{ 'profile.password.header'|trans }}</h1>
                <a href="{{ path('app_profile') }}" class="text-gray-600 hover:text-gray-900">
                    ‚Üê {{ 'profile.password.back'|trans }}
                </a>
            </div>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <!-- Form -->
        <div class="px-8 py-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <!-- Current Password -->
                <div>
                    {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.currentPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    {{ form_errors(form.currentPassword, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <!-- New Password -->
                <div>
                    {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    {{ form_errors(form.newPassword.first, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <!-- Confirm New Password -->
                <div>
                    {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    {{ form_errors(form.newPassword.second, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        {{ 'profile.password.submit'|trans }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}