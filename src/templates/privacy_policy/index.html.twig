{% extends 'base.html.twig' %}

{% block title %}{{ 'privacy_policy.title'|trans }} - AutoSmart{% endblock %}

{% block body %}
<div class="min-h-screen">


    <div class="max-w-4xl mx-auto px-4 py-12">
        <!-- Header -->
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ 'privacy_policy.title'|trans }}</h1>
            <p class="text-gray-600 mb-2">{{ 'privacy_policy.intro.description'|trans }}</p>
            <p class="text-sm text-gray-500">{{ 'privacy_policy.last_updated'|trans }}</p>
        </header>

        <!-- Personal Data -->
        <section class="mb-8 bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">{{ 'privacy_policy.personal_data.title'|trans }}</h2>
            <p class="mb-4">{{ 'privacy_policy.personal_data.description'|trans }}</p>
            <ul class="space-y-3">
                {% for item in ['name', 'email', 'phone', 'id', 'location', 'payment'] %}
                    <li class="flex items-center">
                        <span class="text-blue-500 mr-2">•</span>
                        {{ ('privacy_policy.personal_data.items.' ~ item)|trans }}
                    </li>
                {% endfor %}
            </ul>
        </section>

        <!-- Data Usage -->
        <section class="mb-8 bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">{{ 'privacy_policy.data_usage.title'|trans }}</h2>
            <ul class="space-y-3">
                {% for purpose in ['account', 'listings', 'communications', 'security', 'legal'] %}
                    <li class="flex items-center">
                        <span class="text-green-500 mr-2">✓</span>
                        {{ ('privacy_policy.data_usage.purposes.' ~ purpose)|trans }}
                    </li>
                {% endfor %}
            </ul>
        </section>

        <!-- Cookies -->
        <section class="mb-8 bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">{{ 'privacy_policy.cookies.title'|trans }}</h2>
            <p class="mb-4">{{ 'privacy_policy.cookies.description'|trans }}</p>
            <ul class="space-y-3">
                {% for type in ['essential', 'functional', 'analytics', 'advertising'] %}
                    <li class="flex items-center">
                        <span class="text-blue-500 mr-2">•</span>
                        {{ ('privacy_policy.cookies.types.' ~ type)|trans }}
                    </li>
                {% endfor %}
            </ul>
        </section>

        <!-- Contact -->
        <section class="mt-12 bg-blue-50 rounded-xl p-8 border border-blue-100">
            <h2 class="text-xl font-semibold text-blue-800 mb-4">{{ 'privacy_policy.contact.title'|trans }}</h2>
            <p class="mb-4">{{ 'privacy_policy.contact.description'|trans }}</p>
            <div class="space-y-2 text-blue-600">
                {% for method in ['email', 'dpo'] %}
                    <p>{{ ('privacy_policy.contact.methods.' ~ method)|trans }}</p>
                {% endfor %}
            </div>
        </section>
    </div>
</div>
{% endblock %}