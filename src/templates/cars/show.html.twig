{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col items-center py-12">
    <!-- Main Content Container -->
    <div class="max-w-4xl w-full bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Slider Section -->
        <div class="relative">
            {% if publication.imageFilenames is defined and publication.imageFilenames %}
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        {% for imageFilename in publication.imageFilenames %}
                            <div class="swiper-slide">
                                <img 
                                    src="{{ asset('uploads/brochures/' ~ imageFilename) }}" 
                                    alt="{{ imageFilename }}" 
                                    class="w-full h-64 object-cover"
                                />
                            </div>
                        {% endfor %}
                    </div>
                    <!-- Slider Navigation -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            {% else %}
                <div class="w-full h-64 bg-gray-100 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                    <p class="text-gray-500 mt-2">No images available</p>
                </div>
            {% endif %}
        </div>

        <!-- Details Section -->
        <div class="p-6">
            <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ publication.title }}</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zM12 2a10 10 0 100 20 10 10 0 000-20z"/>
                    </svg>
                    <span class="text-gray-700 font-semibold">Price:</span>
                    <span class="ml-2 text-gray-900">{{ publication.price ? ('$' ~ publication.price) : 'Not available' }}</span>
                </div>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zM12 2a10 10 0 100 20 10 10 0 000-20z"/>
                    </svg>
                    <span class="text-gray-700 font-semibold">Year:</span>
                    <span class="ml-2 text-gray-900">{{ publication.year }}</span>
                </div>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zM12 2a10 10 0 100 20 10 10 0 000-20z"/>
                    </svg>
                    <span class="text-gray-700 font-semibold">Brand:</span>
                    <span class="ml-2 text-gray-900">{{ publication.brand }}</span>
                </div>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zM12 2a10 10 0 100 20 10 10 0 000-20z"/>
                    </svg>
                    <span class="text-gray-700 font-semibold">Model:</span>
                    <span class="ml-2 text-gray-900">{{ publication.model }}</span>
                </div>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zM12 2a10 10 0 100 20 10 10 0 000-20z"/>
                    </svg>
                    <span class="text-gray-700 font-semibold">Description:</span>
                    <span class="ml-2 text-gray-900">{{ publication.description }}</span>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-8 flex justify-between">
                <a href="{{ path('app_cars') }}" 
                   class="inline-flex items-center px-6 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    Back to Cars
                </a>
                <a href="#top" 
                   class="inline-flex items-center px-6 py-2 bg-gray-500 text-white text-sm font-medium rounded-lg hover:bg-gray-600 focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200">
                    Back to Top
                </a>
            </div>
        </div>
    </div>
</div>

<!-- SwiperJS -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    const swiper = new Swiper('.swiper-container', {
        loop: true,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>
<link href="https://unpkg.com/swiper/swiper-bundle.min.css" rel="stylesheet">
{% endblock %}