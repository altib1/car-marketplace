{% extends 'base.html.twig' %}

{% block title %}{{ publication.brand }} {{ publication.model }} - {{ publication.year }}{% endblock %}

{% block body %}
{% import "components/_image.html.twig" as images %}

<div class="min-h-screen mt-16">
    <!-- Hero Section with Slider and Quick Info -->
    <div class="max-w-7xl mx-auto px-4 mt-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Left: Image Slider -->
            <div class="relative h-[400px]">
                {% if publication.imageFilenames is defined and publication.imageFilenames %}
                    <div class="swiper mySwiper h-full rounded-xl overflow-hidden shadow-lg">
                        <div class="swiper-wrapper">
                            {% for imageFilename in publication.imageFilenames %}
                                <div class="swiper-slide">
                                    {{ images.responsive_image(
                                        imageFilename,
                                        'Photo of ' ~ publication.brand.name ~ ' ' ~ publication.model.name,
                                        'w-full h-full object-cover',
                                        'publication'
                                    ) }}
                                </div>
                            {% endfor %}
                        </div>
                        <button class="swiper-button-prev after:!content-[''] !w-10 !h-10">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                            </svg>
                        </button>
                        <button class="swiper-button-next after:!content-[''] !w-10 !h-10">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <div class="swiper-pagination !bottom-4"></div>
                    </div>
                {% else %}
                    <div class="h-full bg-gray-50 rounded-xl flex items-center justify-center border border-gray-100">
                        <div class="text-center">
                            <svg class="w-12 h-12 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <p class="text-gray-400 mt-2 text-sm">{{ 'car.no_images'|trans}}</p>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Right: Quick Info Cards -->
            <div class="space-y-4">
                <!-- Title and Price -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h1 class="text-2xl font-bold text-gray-900">{{ publication.brand }} {{ publication.model }}</h1>
                        {% if app.user %}
                            {% set isInWishlist = publication.wishlists|filter(wishlist => wishlist.user == app.user)|length > 0 %}
                            <a href="{{ path('app_wishlist_add', {'id': publication.id}) }}" 
                               class="flex items-center gap-2 px-4 py-2 rounded-lg transition-all duration-200 
                                    {{ isInWishlist 
                                        ? 'bg-red-50 text-red-600 hover:bg-red-100' 
                                        : 'bg-gray-50 text-gray-600 hover:bg-gray-100' 
                                    }}">
                                <svg class="w-6 h-6" fill="{{ isInWishlist ? 'currentColor' : 'none' }}" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                <span class="font-medium">
                                    {{ isInWishlist ? 'car.saved'|trans : 'car.save'|trans }}
                                </span>
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" 
                               class="flex items-center gap-2 px-4 py-2 bg-gray-50 text-gray-600 rounded-lg hover:bg-gray-100 transition-all duration-200">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                <span class="font-medium">{{ 'car.save'|trans }}</span>
                            </a>
                        {% endif %}
                    </div>
                    <div class="flex justify-between items-center mt-4">
                        <div>
                            <p class="text-sm text-gray-500">{{ 'car.price'|trans }}</p>
                            <p class="text-3xl font-bold text-blue-600">â‚¬{{ publication.price|number_format(2, ',', ' ') }}</p>
                        </div>
                        {% if publication.hasWarranty %}
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                                <span class="px-3 py-1.5 bg-green-50 text-green-700 rounded-full text-sm font-medium">
                                    {{ publication.warrantyMonths }} {{ 'car.months_warranty'|trans }}
                                </span>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Quick Highlights -->
                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-white rounded-xl p-4">
                        <div class="flex items-center space-x-3">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            <div>
                                <p class="text-sm text-gray-600">{{'car.year'|trans}}</p>
                                <p class="font-semibold">{{ publication.year }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-green-50 rounded-xl p-4">
                        <div class="flex items-center space-x-3">
                            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            <div>
                                <p class="text-sm text-gray-600">{{'car.mileage'|trans}}</p>
                                <p class="font-semibold">{{ publication.mileage|number_format(0, ',', ' ') }} km</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Key Features -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h3 class="font-semibold mb-4">{{ 'car.key_features'|trans}}</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span>{{ publication.fuelType }}</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span>{{ publication.gearbox }}</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span>{{ publication.engineSize }} HP</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span>{{ publication.condition }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Back Button -->
        <div class="mb-6">
            <a href="{{ path('app_cars') }}" 
               class="inline-flex items-center px-4 py-2 bg-white/90 backdrop-blur-sm text-gray-700 rounded-lg hover:bg-white transition-all duration-200 shadow-sm hover:shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                {{ 'car.back_to_list'|trans }}
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">

                <!-- Technical Specifications -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-xl font-bold mb-6">{{ 'car.tech_spec'|trans}}</h2>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div>
                                <p class="text-sm text-gray-500">{{ 'car.brand'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.brand }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">{{ 'car.model'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.model }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">{{'car.engine'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.motorizationType }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">{{'car.fuel'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.fuelType }}</p>
                            </div>
                        </div>
                        <div class="space-y-4">
                            <div>
                                <p class="text-sm text-gray-500">{{'car.gearbox'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.gearbox }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">{{'car.condition'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.condition }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">{{'car.location'|trans}}</p>
                                <p class="text-lg font-medium">{{ publication.sellerLocation }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-xl font-bold mb-4">{{'car.description'|trans}}</h2>
                    <p class="text-gray-600 leading-relaxed">{{ publication.description }}</p>
                </div>

                <!-- Features & Equipment -->
                {% if publication.equipment|length > 0 %}
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-xl font-bold mb-4">{{'car.features'|trans}}</h2>
                    <div class="grid grid-cols-2 gap-4">
                        {% for item in publication.equipment %}
                            <div class="flex items-center space-x-2">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span>{{ item }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <!-- Guarantie Messages explanation -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-xl font-bold mb-4">{{ 'car.warranty.title'|trans }}</h2>

                    {% if publication.hasWarranty %}
                        <div class="mb-4 p-4 bg-green-50 border-l-4 border-green-400">
                            <p class="text-sm text-green-700">
                                {{ 'car.warranty.available_months'|trans({'%months%': publication.warrantyMonths}) }}
                            </p>
                        </div>
                    {% endif %}

                    <div class="space-y-4">
                        <div class="space-y-6">
                            <div class="rounded-xl bg-gradient-to-r from-blue-50 to-blue-100 p-5 shadow-sm">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-blue-700 mb-1">{{ 'car.warranty.explanation'|trans }}</h4>
                                    </div>
                                </div>
                            </div>

                            <div class="rounded-xl bg-gradient-to-r from-amber-50 to-amber-100 p-5 shadow-sm">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-amber-700 mb-1">{{ 'car.warranty.request'|trans }}</h4>
                                    </div>
                                </div>
                            </div>

                            <div class="rounded-xl bg-gradient-to-r from-red-50 to-red-100 p-5 shadow-sm">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-red-700 mb-1">{{ 'car.warranty.disclaimer'|trans }}</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bank estimations -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-xl font-bold mb-4">{{'car.loan_simulator.title'|trans}}</h2>
                    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-4">
                        <p class="text-sm text-blue-700">{{'car.loan_simulator.disclaimer'|trans}}</p>
                    </div>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">{{'car.loan_simulator.vehicle_price'|trans}}</label>
                            <input type="number" id="vehiclePrice" class="w-full rounded-lg border-gray-300" value="{{ publication.price }}">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">{{'car.loan_simulator.interest_rate'|trans}} (%)</label>
                            <input type="number" id="interestRate" class="w-full rounded-lg border-gray-300" value="5.9" step="0.1" min="0">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">{{'car.loan_simulator.loan_duration'|trans}}</label>
                            <select id="loanDuration" class="w-full rounded-lg border-gray-300">
                                <option value="12">12 {{'car.loan_simulator.months'|trans}}</option>
                                <option value="24">24 {{'car.loan_simulator.months'|trans}}</option>
                                <option value="36">36 {{'car.loan_simulator.months'|trans}}</option>
                                <option value="48">48 {{'car.loan_simulator.months'|trans}}</option>
                                <option value="60">60 {{'car.loan_simulator.months'|trans}}</option>
                                <option value="72">72 {{'car.loan_simulator.months'|trans}}</option>
                            </select>
                        </div>

                        <div class="bg-gray-50 rounded-lg p-4 mt-4">
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <p class="text-sm text-gray-600">{{'car.loan_simulator.monthly_payment'|trans}}</p>
                                    <p class="text-xl font-bold text-blue-600" id="monthlyPayment">â‚¬0</p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-600">{{'car.loan_simulator.total_interest'|trans}}</p>
                                    <p class="text-xl font-bold text-blue-600" id="totalInterest">â‚¬0</p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 space-y-2">
                            <div class="bg-gradient-to-r from-yellow-50 to-yellow-100 rounded-xl p-5 shadow-sm">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-yellow-700 mb-1">{{'car.loan_simulator.warning'|trans}}</h4>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-gradient-to-r from-red-50 to-red-100 rounded-xl p-5 shadow-sm">
                                <div class="flex items-start space-x-4">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-red-700 mb-1">{{'car.loan_simulator.responsibility'|trans}}</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="sticky top-8 space-y-6">
                    <!-- Shop/User Info -->
                    <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200 p-6">
                        <div class="text-center mb-6">
                            {% if publication.shop %}
                                <div class="w-20 h-20 mx-auto mb-4">
                                    {% if publication.shop.logoImageFileName %}
                                        {{ images.responsive_image(
                                            publication.shop.logoImageFileName,
                                            publication.shop.name ~ ' logo',
                                            'w-full h-full object-cover rounded-full',
                                            'shop'
                                        ) }}
                                    {% else %}
                                        <div class="w-full h-full bg-gray-100 rounded-full flex items-center justify-center">
                                            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                                <h3 class="text-xl font-bold">{{ publication.shop.name }}</h3>
                            {% else %}
                                <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                </div>
                                <h3 class="text-xl font-bold">{{ publication.user.name }}</h3>
                            {% endif %}
                        </div>
                        
                        <div class="space-y-3">
                            <button 
                                onclick="togglePhoneNumber(this)" 
                                data-phone="{{ publication.user.phoneNumber }}"
                                class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition-all duration-200 flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                                <span class="phone-text">{{'car.show_phone'|trans}}</span>
                            </button>
                            <button 
                                data-modal-target="chatModal"
                                class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition-all duration-200 flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                                </svg>
                                {{ 'car.send_message'|trans }}
                            </button>
                            {% if publication.shop %}
                            <a href="{{ path('app_autoshop_show', {'id': publication.shop.id}) }}" class="w-full bg-gray-100 text-gray-700 px-6 py-3 rounded-xl hover:bg-gray-200 transition-all duration-200 flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
