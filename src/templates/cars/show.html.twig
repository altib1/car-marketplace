{% extends 'base.html.twig' %}

{% block title %}{{ publication.title }}{% endblock %}

{% block body %}
<div class="container mx-auto pt-16">
    <!-- Breadcrumb -->
    <div class="p-4">
        <a href="{{ path('app_cars') }}" class="inline-flex items-center text-gray-600 hover:text-gray-900">
            ← Retour
        </a>
    </div>

    <!-- Main Content Container -->
    <div class="max-w-7xl mx-auto px-4">
        <!-- Image Gallery -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
            <div class="relative">
                {% if publication.imageFilenames is defined and publication.imageFilenames %}
                    <div class="swiper mySwiper h-[400px]">
                        <div class="swiper-wrapper">
                            {% for imageFilename in publication.imageFilenames %}
                                <div class="swiper-slide">
                                    <img 
                                        src="{{ asset('uploads/brochures/' ~ imageFilename) }}" 
                                        alt="{{ imageFilename }}" 
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                            {% endfor %}
                        </div>
                        <!-- Pagination -->
                        <div class="swiper-pagination"></div>
                        <!-- Navigation buttons -->
                        <div class="swiper-button-next !text-white"></div>
                        <div class="swiper-button-prev !text-white"></div>
                    </div>
                {% else %}
                    <div class="w-full h-[400px] bg-gray-100 flex flex-col items-center justify-center">
                        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        <p class="text-gray-500 mt-2">No images available</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Details Section -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Details -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Title and Price -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h1 class="text-2xl font-bold text-gray-900 mb-4">{{ publication.title }}</h1>
                    <div class="flex items-baseline mb-6">
                        <span class="text-2xl font-bold">{{ publication.price ? publication.price : 'Not available' }} €</span>
                    </div>
                </div>

                <!-- Car Details -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-lg font-semibold mb-4">Caractéristiques</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="flex items-center">
                            <span class="text-gray-700 font-semibold">Year:</span>
                            <span class="ml-2 text-gray-900">{{ publication.year }}</span>
                        </div>
                        <div class="flex items-center">
                            <span class="text-gray-700 font-semibold">Brand:</span>
                            <span class="ml-2 text-gray-900">{{ publication.brand }}</span>
                        </div>
                        <div class="flex items-center">
                            <span class="text-gray-700 font-semibold">Model:</span>
                            <span class="ml-2 text-gray-900">{{ publication.model }}</span>
                        </div>
                        <div class="flex items-center">
                            <span class="text-gray-700 font-semibold">Motorisation:</span>
                            <span class="ml-2 text-gray-900">{{ publication.motorizationType }}</span>
                        </div>
                        {% if publication.description %}
                        <div class="col-span-2">
                            <span class="text-gray-700 font-semibold block mb-2">Description:</span>
                            <p class="text-gray-900">{{ publication.description }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Sticky Sidebar -->
            <div class="lg:h-screen lg:sticky lg:top-0 pt-6 space-y-6">
                <!-- Dealer Info -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-lg font-semibold mb-4">Contact</h2>
                    <div class="space-y-4">
                        <div class="flex items-center">
                            <span class="text-gray-700">GARAGE DE BRETAGNE ANGERS</span>
                        </div>
                        <div class="flex items-center">
                            <span class="text-gray-600">49000 ANGERS</span>
                        </div>

                        <button class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors duration-200">
                            N° téléphone
                        </button>
                        <button class="bg-gray-100 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-200 transition-colors duration-200">
                            Message
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Swiper CSS -->
<link href="https://unpkg.com/swiper/swiper-bundle.min.css" rel="stylesheet">

<!-- SwiperJS -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper(".mySwiper", {
        loop: true,
        effect: "fade",
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        autoplay: {
            delay: 5000,
            disableOnInteraction: false,
        },
        spaceBetween: 10, // Space between slides for better spacing
    });
});
</script>
{% endblock %}
