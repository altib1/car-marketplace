{% extends 'base.html.twig' %}

{% block title %}{{ 'login.reset_password.check_email.title'|trans }}{% endblock %}

{% block body %}
<div class="flex max-w-[1400px] justify-center items-start lg:items-center mx-auto mt-8 lg:min-h-screen">
    <!-- Left: Image -->
    <div class="hidden lg:block lg:w-1/2 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/90 to-blue-800/90 mix-blend-multiply"></div>
        <img src="{{ asset('website/homepage/logo-login.jpg')}}" 
             alt="Background" 
             class="object-cover w-full h-full">
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-white text-center p-12">
                <h2 class="text-4xl font-bold mb-4">{{ 'login.reset_password.check_email.hero.title'|trans }}</h2>
                <p class="text-lg text-white/80">{{ 'login.reset_password.check_email.hero.subtitle'|trans }}</p>
            </div>
        </div>
    </div>

    <!-- Right: Content -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-24">
        <div class="w-full max-w-md">
            <!-- Success Icon -->
            <div class="text-center mb-8">
                <div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">{{ 'login.reset_password.check_email.content.title'|trans }}</h1>
            </div>

            <!-- Message -->
            <div class="space-y-6">
                <div class="bg-blue-50 p-4 rounded-lg">
                    <p class="text-sm text-blue-800">
                        {{ 'login.reset_password.check_email.content.message'|trans }}
                    </p>
                    <p class="text-sm text-blue-800 mt-2 font-medium">
                        {{ 'login.reset_password.check_email.content.expiration'|trans }} 
                        {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                    </p>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-600">
                        {{ 'login.reset_password.check_email.content.spam_notice'|trans }}
                        <a href="{{ path('app_forgot_password_request') }}" 
                           class="text-blue-600 hover:text-blue-800 font-medium">
                            {{ 'login.reset_password.check_email.content.try_again'|trans }}
                        </a>
                    </p>
                </div>

                <a href="{{ path('app_login') }}" 
                   class="block text-center w-full py-3 px-4 border border-blue-600 text-blue-600 rounded-xl hover:bg-blue-50 transition-colors">
                    {{ 'login.reset_password.check_email.content.back_to_login'|trans }}
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}