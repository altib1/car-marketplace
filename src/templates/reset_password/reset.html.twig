{% extends 'base.html.twig' %}

{% block title %}{{ 'login.reset_password.page_title'|trans }}{% endblock %}

{% block body %}
<div class="flex max-w-[1400px] justify-center items-start lg:items-center mx-auto mt-8 lg:min-h-screen">
    <!-- Left: Image -->
    <div class="hidden lg:block lg:w-1/2 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/90 to-blue-800/90 mix-blend-multiply"></div>
        <img src="{{ asset('website/homepage/logo-login.jpg')}}" 
             alt="Background" 
             class="object-cover w-full h-full">
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-white text-center p-12">
                <h2 class="text-4xl font-bold mb-4">{{ 'login.reset_password.hero.title'|trans }}</h2>
                <p class="text-lg text-white/80">{{ 'login.reset_password.hero.subtitle'|trans }}</p>
            </div>
        </div>
    </div>

    <!-- Right: Reset Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-24">
        <div class="w-full max-w-md space-y-8">
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-900">{{ 'login.reset_password.form.title'|trans }}</h1>
                <p class="mt-2 text-gray-600">{{ 'login.reset_password.form.subtitle'|trans }}</p>
            </div>

            {{ form_start(resetForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                {# First Password Field #}
                <div class="space-y-4">
                    <div class="relative">
                        {{ form_label(resetForm.plainPassword.first, 'login.reset_password.form.new_password'|trans, {
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            {{ form_widget(resetForm.plainPassword.first, {
                                'attr': {
                                    'class': 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    'placeholder': 'login.reset_password.form.new_password_placeholder'|trans
                                }
                            }) }}
                        </div>
                        {{ form_errors(resetForm.plainPassword.first, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>

                    {# Second Password Field #}
                    <div class="relative">
                        {{ form_label(resetForm.plainPassword.second, 'login.reset_password.form.repeat_password'|trans, {
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                        }) }}
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            {{ form_widget(resetForm.plainPassword.second, {
                                'attr': {
                                    'class': 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                                    'placeholder': 'login.reset_password.form.repeat_password_placeholder'|trans
                                }
                            }) }}
                        </div>
                        {{ form_errors(resetForm.plainPassword.second, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>
                </div>

                {# Password Requirements #}
                <div class="bg-blue-50 p-4 rounded-lg">
                    <h4 class="text-sm font-medium text-blue-800 mb-2">{{ 'login.reset_password.form.requirements.title'|trans }}</h4>
                    <ul class="text-sm text-blue-700 space-y-1">
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            {{ 'login.reset_password.form.requirements.length'|trans }}
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            {{ 'login.reset_password.form.requirements.complexity'|trans }}
                        </li>
                    </ul>
                </div>

                <button type="submit" 
                        class="w-full flex justify-center items-center px-4 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-xl hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg shadow-blue-500/30 transition-all">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                    </svg>
                    {{ 'login.reset_password.form.submit'|trans }}
                </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
</div>
{% endblock %}