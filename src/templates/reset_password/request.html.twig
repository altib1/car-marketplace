{% extends 'base.html.twig' %}

{% block title %}{{ 'login.reset_password.request.title'|trans }}{% endblock %}

{% block body %}
<div class="flex max-w-[1400px] justify-center items-start lg:items-center mx-auto mt-8 lg:min-h-screen">
    <!-- Left: Image -->
    <div class="hidden lg:block lg:w-1/2 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/90 to-blue-800/90 mix-blend-multiply"></div>
        <img src="{{ asset('website/homepage/logo-login.jpg')}}" 
             alt="Background" 
             class="object-cover w-full h-full">
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-white text-center p-12">
                <h2 class="text-4xl font-bold mb-4">{{ 'login.reset_password.request.hero.title'|trans }}</h2>
                <p class="text-lg text-white/80">{{ 'login.reset_password.request.hero.subtitle'|trans }}</p>
            </div>
        </div>
    </div>

    <!-- Right: Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-24">
        <div class="w-full max-w-md space-y-8">
            <!-- Header -->
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-900">{{ 'login.reset_password.request.form.title'|trans }}</h1>
                <p class="mt-2 text-gray-600">{{ 'login.reset_password.request.form.subtitle'|trans }}</p>
            </div>

            <!-- Flash Messages -->
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-50 text-red-800 rounded-lg p-4 flex items-center">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {{ flash_error }}
                </div>
            {% endfor %}

            <!-- Form -->
            {{ form_start(requestForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                <div class="relative">
                    <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                        </svg>
                    </div>
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'class': 'pl-10 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none',
                            'placeholder': 'login.reset_password.request.form.email_placeholder'|trans
                        }
                    }) }}
                </div>

                <div class="bg-blue-50 p-4 rounded-lg flex items-start space-x-3">
                    <svg class="w-6 h-6 text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p class="text-sm text-blue-800">{{ 'login.reset_password.request.form.help_text'|trans }}</p>
                </div>

                <button type="submit" 
                        class="w-full flex justify-center items-center px-4 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-xl hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg shadow-blue-500/30 transition-all">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    {{ 'login.reset_password.request.form.submit'|trans }}
                </button>
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}