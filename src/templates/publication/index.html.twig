{% extends 'base.html.twig' %}

{% block title %}Publication Index{% endblock %}

{% block body %}
<div class="flex flex-col md:flex-row min-h-screen bg-gray-50">

    <!-- Main Content -->
    <div class="flex-1 p-8">
        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
            <h1 class="text-3xl font-semibold text-gray-800 mb-6 p-6 border-b border-gray-200">Publication Index</h1>

            <div class="p-6">
                <div class="overflow-auto w-full">
                    <table class="min-w-full divide-y divide-gray-200 table-fixed">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for publication in publications %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-normal text-sm text-gray-900"><p>{{ publication.id }}</p></td>
                                    <td class="px-6 py-4 whitespace-normal text-sm text-gray-900"><p class="max-w-40 overflow-hidden turncate ...">{{ publication.title ? publication.title ~ '...' : '' }}</p></td>
                                    <td class="px-6 py-4 whitespace-normal text-sm text-gray-900"><p  class="max-w-40 overflow-hidden turncate ...">{{ publication.description ? publication.description ~ '...' : '' }}</p></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><p>{{ publication.price }}</p></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><p>{{ publication.year }}</p></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <a href="{{ path('app_publication_show', {'id': publication.id}) }}" class="text-blue-600 hover:text-blue-800">Show</a>
                                        <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="text-blue-600 hover:text-blue-800 ml-2">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">No records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="flex justify-between items-center p-6 bg-gray-100 border-t border-gray-200">
                <a href="{{ path('app_publication_new') }}" class="text-blue-600 hover:text-blue-800 transition-colors">Create New</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
