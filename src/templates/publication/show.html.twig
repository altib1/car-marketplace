{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<div class="flex flex-col md:flex-row min-h-screen bg-gray-50">

    <!-- Main Content -->
    <div class="flex-1 p-8">
        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg">
            <h1 class="text-4xl font-bold text-gray-900 mb-6 p-6 border-b border-gray-200">Publication Details</h1>

            <div class="p-6">
                <table class="w-full text-sm text-left text-gray-700">
                    <tbody>
                        <tr class="border-b bg-gray-50">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Title</th>
                            <td class="px-6 py-4">{{ publication.title }}</td>
                        </tr>
                        <tr class="border-b">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Description</th>
                            <td class="px-6 py-4">{{ publication.description }}</td>
                        </tr>
                        <tr class="border-b bg-gray-50">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Price</th>
                            <td class="px-6 py-4">{{ publication.price }}</td>
                        </tr>
                        <tr class="border-b">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Year</th>
                            <td class="px-6 py-4">{{ publication.year }}</td>
                        </tr>
                        <tr class="border-b bg-gray-50">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Brand</th>
                            <td class="px-6 py-4">{{ publication.brand }}</td>
                        </tr>
                        <tr class="border-b">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Model</th>
                            <td class="px-6 py-4">{{ publication.model }}</td>
                        </tr>
                        <tr class="border-b bg-gray-50">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Motorisation</th>
                            <td class="px-6 py-4">{{ publication.motorizationType }}</td>
                        </tr>
                        <tr class="border-b">
                            <th class="px-6 py-4 text-gray-900 font-semibold">Images</th>
                            <td class="px-6 py-4">
                                <div class="flex flex-wrap gap-4">
                                    {% for imageFilename in publication.imageFilenames %}
                                        <img src="{{ asset('uploads/brochures/' ~ imageFilename) }}" alt="Publication Image" class="w-32 h-32 object-cover rounded-lg shadow-md">
                                    {% endfor %}
                                </div>
                                {% if publication.videoFilename %}
                                    <div class="mt-4">
                                        <video controls class="w-full rounded-lg shadow-md">
                                            <source src="{{ asset('uploads/brochures/' ~ publication.videoFilename) }}" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="flex justify-between items-center p-6 bg-gray-100 border-t border-gray-200">
                <a href="{{ path('app_publication_index') }}" class="text-blue-600 hover:text-blue-800 transition-colors">Back to List</a>
                <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-md shadow-md transition-all">Edit</a>
            </div>

            <div class="p-6">
                {{ include('publication/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}