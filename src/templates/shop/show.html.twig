{% extends 'base.html.twig' %}

{% block title %}{{ shop.name }} - Details{% endblock %}

{% block body %}
    {# Hero section #}
    <div class="relative h-96">
        <div class="absolute inset-0">
            {% if shop.backgroundImageFileName %}
                <img src="{{ asset('uploads/brochures/' ~ shop.backgroundImageFileName) }}" 
                     class="w-full h-full object-cover" 
                     alt="{{ shop.name }}">
            {% else %}
                <div class="w-full h-full bg-gradient-to-br from-blue-600 to-purple-700"></div>
            {% endif %}
            <div class="absolute inset-0 bg-black/40"></div>
        </div>

        {# Shop info overlay #}
        <div class="absolute inset-0 flex items-end">
            <div class="container mx-auto px-6 pb-12">
                <div class="flex items-center gap-8">
                    <img src="{{ asset('uploads/brochures/' ~ shop.logoImageFileName) }}" 
                         class="w-28 h-28 rounded-2xl shadow-xl border-2 border-white/20 backdrop-blur-sm" 
                         alt="{{ shop.name }}">
                    <div>
                        <h1 class="text-5xl font-bold text-white mb-2">{{ shop.name }}</h1>
                        <p class="text-white/80">{{ shop.address }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-6 py-12">
        <div class="grid grid-cols-12 gap-8">
            {# Shop details #}
            <div class="col-span-12 lg:col-span-4">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 space-y-6">
                    <div>
                        <h3 class="font-medium text-gray-500">Working Hours</h3>
                        <p class="mt-1">{{ shop.workHours }}</p>
                    </div>

                    <div>
                        <h3 class="font-medium text-gray-500">Established</h3>
                        <p class="mt-1">{{ shop.creationDate|date('F Y') }}</p>
                    </div>

                    {% if shop.services %}
                        <div>
                            <h3 class="font-medium text-gray-500 mb-3">Services</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for service in shop.services %}
                                    <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm">
                                        {{ service }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Publications #}
            <div class="col-span-12 lg:col-span-8">
                <h2 class="text-2xl font-bold mb-6">Available Vehicles</h2>
                
                {% if publications|length > 0 %}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {% for publication in publications %}
                            <a href="{{ path('app_car_show', {'id': publication.id}) }}" 
                               class="group block bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all border border-gray-100">
                                {% if publication.imageFilenames|length > 0 %}
                                    <div class="relative h-48 rounded-t-2xl overflow-hidden">
                                        <img src="{{ asset('uploads/brochures/' ~ publication.imageFilenames[0]) }}" 
                                             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" 
                                             alt="{{ publication.brand.name ~ ' ' ~ publication.model.name }}">
                                        {% if publication.hasWarranty %}
                                            <span class="absolute top-3 right-3 bg-green-500/90 backdrop-blur-sm text-white px-3 py-1 rounded-full text-sm">
                                                {{ publication.warrantyMonths }}m warranty
                                            </span>
                                        {% endif %}
                                    </div>
                                {% endif %}

                                <div class="p-6">
                                    <div class="flex justify-between items-start mb-4">
                                        <h3 class="text-xl font-semibold">
                                            {{ publication.brand.name ~ ' ' ~ publication.model.name }}
                                        </h3>
                                        <span class="text-xl font-bold text-blue-600">
                                            {{ publication.price|number_format(0, ',', '.') }} â‚¬
                                        </span>
                                    </div>
                                    
                                    <div class="grid grid-cols-2 gap-4 text-sm text-gray-600">
                                        <div class="flex items-center gap-2">
                                            <span>{{ publication.year }}</span>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <span>{{ publication.mileage|number_format(0, ',', '.') }} km</span>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <span>{{ publication.fuelType }}</span>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <span>{{ publication.gearbox }}</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="bg-gray-50 rounded-xl p-8 text-center text-gray-500">
                        No vehicles available at the moment.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
