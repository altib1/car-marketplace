{% extends 'base.html.twig' %}

{% block title %}Car Marketplace - Shop{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Available Cars</h1>
        
        <div class="row">
            {% for car in cars|default([]) %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        {% if car.image %}
                            <img src="{{ asset(car.image) }}" class="card-img-top" alt="{{ car.name }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ car.name }}</h5>
                            <p class="card-text">
                                <strong>Price:</strong> ${{ car.price|number_format(2) }}<br>
                                <strong>Year:</strong> {{ car.year }}
                            </p>
                            <a href="{{ path('car_details', {id: car.id}) }}" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>No cars available at the moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{# Hero Section #}
{% block hero %}
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white">
        <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
            {% if shop %}
                <div class="flex items-center justify-between">
                    <div class="space-y-2">
                        <h1 class="text-3xl font-bold">{{ shop.name }}</h1>
                        <p class="text-blue-100">{{ shop.description }}</p>
                        <div class="flex items-center space-x-4">
                            <span><i class="fas fa-car"></i> {{ shop.carsCount }} Cars</span>
                            <span><i class="fas fa-star"></i> {{ shop.rating|default('New') }}</span>
                        </div>
                    </div>
                    <a href="{{ path('shop_edit') }}" class="inline-flex items-center px-4 py-2 bg-white text-blue-600 rounded-lg hover:bg-blue-50 transition-all duration-300">
                        <i class="fas fa-edit mr-2"></i> Edit Shop
                    </a>
                </div>
            {% else %}
                <div class="text-center space-y-6">
                    <h2 class="text-3xl font-bold">Start Your Car Dealership Today</h2>
                    <p class="text-xl text-blue-100 max-w-2xl mx-auto">Join our marketplace and reach thousands of potential buyers</p>
                    
                    <div class="grid md:grid-cols-3 gap-8 mt-8">
                        <div class="bg-white/10 p-6 rounded-lg">
                            <i class="fas fa-globe text-3xl mb-4"></i>
                            <h3 class="text-xl font-semibold">Wide Reach</h3>
                            <p>Connect with buyers across the country</p>
                        </div>
                        <div class="bg-white/10 p-6 rounded-lg">
                            <i class="fas fa-shield-alt text-3xl mb-4"></i>
                            <h3 class="text-xl font-semibold">Secure Platform</h3>
                            <p>Safe transactions and verified users</p>
                        </div>
                        <div class="bg-white/10 p-6 rounded-lg">
                            <i class="fas fa-chart-line text-3xl mb-4"></i>
                            <h3 class="text-xl font-semibold">Sales Analytics</h3>
                            <p>Track your performance and growth</p>
                        </div>
                    </div>
                    
                    <a href="{{ path('shop_create') }}" class="inline-flex items-center px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-blue-50 transition-all duration-300">
                        <i class="fas fa-plus-circle mr-2"></i>
                        Create Your Shop
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}