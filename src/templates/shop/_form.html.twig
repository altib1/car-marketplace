{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white shadow-lg rounded-lg px-6 py-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Shop Information</h2>
            
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}
                {# Shop Name #}
                <div class="space-y-2">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                </div>

                {# Background Image Upload #}
                <div class="space-y-2">
                    {{ form_label(form.backgroundImageFileName, 'Background Image', {
                        'label_attr': {'class': 'text-sm font-medium text-gray-700'}
                    }) }}
                    <div class="mt-1 relative border-2 border-gray-300 border-dashed rounded-lg hover:border-blue-500 transition-colors duration-200">
                        {{ form_widget(form.backgroundImageFileName, {
                            'attr': {
                                'class': 'absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10',
                                'accept': 'image/*'
                            }
                        }) }}
                        <div class="preview-area p-6">
                            <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="flex justify-center text-sm text-gray-600">
                                    <p class="relative cursor-pointer font-medium text-blue-600 hover:text-blue-500">
                                        <span>Upload a file</span>
                                    </p>
                                    <p class="pl-1">or drag and drop</p>
                                </div>
                                <p class="text-xs text-gray-500">PNG, JPG, JPEG up to 10MB</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                {# Logo Image Upload #}
                <div class="space-y-2">
                    {{ form_label(form.logoImageFileName, 'Logo Image', {
                        'label_attr': {'class': 'text-sm font-medium text-gray-700'}
                    }) }}
                    <div class="mt-1 relative border-2 border-gray-300 border-dashed rounded-lg hover:border-blue-500 transition-colors duration-200">
                        {{ form_widget(form.logoImageFileName, {
                            'attr': {
                                'class': 'absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10',
                                'accept': 'image/*'
                            }
                        }) }}
                        <div class="preview-area p-6">
                            <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="flex justify-center text-sm text-gray-600">
                                    <p class="relative cursor-pointer font-medium text-blue-600 hover:text-blue-500">
                                        <span>Upload a file</span>
                                    </p>
                                    <p class="pl-1">or drag and drop</p>
                                </div>
                                <p class="text-xs text-gray-500">PNG, JPG, JPEG up to 10MB</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Creation Date #}
                <div class="space-y-2">
                    {{ form_label(form.creationDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.creationDate, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm datepicker'}}) }}
                </div>

                {# Address #}
                <div class="space-y-2">
                    {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                </div>

                {# Services #}
                <div class="space-y-2">
                    {{ form_label(form.services, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="services space-y-4" data-prototype="{{ form_widget(form.services.vars.prototype)|e('html_attr') }}">
                        {% for service in form.services %}
                            <div class="service-item relative group">
                                <div class="flex items-center space-x-4">
                                    {{ form_widget(service, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                    <button type="button" class="remove-service hidden group-hover:block text-red-600 hover:text-red-800">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="add-service mt-2 inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Add Service
                    </button>
                </div>

                {# Work Hours #}
                <div class="space-y-2">
                    {{ form_label(form.workHours, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.workHours, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                </div>

                {# Submit Button #}
                <div class="pt-5">
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        {{ button_label|default('Save') }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.js"></script>
{% endblock %}